package fibonacci;

public class FiboPrinter {

    public static void main(String[] args) {
        // Step 1: Display title
        printTitle();

        // Step 2: Print 45 Fibonacci numbers inline (starting from 0 and 1)
        printInline(45, 0, 1);

        printWithIndex(45, 0, 1, 1);
    }

    public static void printTitle() {
        System.out.println("Fibonacci Sequence (45 numbers):");
    }

    public static void printInline(int count, int a, int b) {
        // Condition: if no numbers left, stop
        if (count == 0) {
            System.out.println();
            return;
        }

        System.out.print(a);

        // if not last, add comma
        if (count > 1) {
            System.out.print(", ");
        }

        printInline(count - 1, b, a + b);
    }

    public static void printWithIndex(int count, int a, int b, int index) {
        // if finished, show total
        if (count == 0) {
            System.out.println("Total: " + (index - 1));
            return;
        }

        // first time call
        if (index == 1) {
            System.out.println("\nCheck by index:");
        }

        System.out.println(index + ": " + a);

        printWithIndex(count - 1, b, a + b, index + 1);
    }
}
