
package matrixcalculator;

import java.util.Scanner;

public class MatrixCalculator {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        MatrixInput inputHandler = new MatrixInput(scanner);
        MatrixOperation operation = new MatrixOperation();
        MatrixDisplay display = new MatrixDisplay();

        while (true) {
            System.out.println("========= Calculator program ========");
            System.out.println("1. Addition Matrix");
            System.out.println("2. Subtraction Matrix");
            System.out.println("3. Multiplication Matrix");
            System.out.println("4. Quit");
            System.out.print("Your choice: ");
            int choice = inputHandler.getChoice();

            if (choice == 4) {
                System.out.println("Bye bye!");
                break;
            }

            int[][] matrix1 = inputHandler.readMatrix("Matrix 1");
            int[][] matrix2 = inputHandler.readMatrix("Matrix 2", choice == 3 ? matrix1[0].length : matrix1.length);

            int[][] result = null;
            switch (choice) {
                case 1:
                    result = operation.additionMatrix(matrix1, matrix2);
                    break;
                case 2:
                    result = operation.subtractionMatrix(matrix1, matrix2);
                    break;
                case 3:
                    result = operation.multiplicationMatrix(matrix1, matrix2);
                    break;
                default:
                    System.out.println("Invalid option.");
            }

            if (result != null) {
                System.out.println("-------- Result --------");
                display.printMatrix(result);
            }
        }
    }
}
