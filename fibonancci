package com.mycompany.demofibo;

public class FibonacciPrinter {

    public static void main(String[] args) {
        // Step 1: Display the title of the program
        displayTitle();

        // Step 2: Print Fibonacci numbers inline
        int total = 45;
        int first = 0;
        int second = 1;
        PrintFibonacciInline(total, first, second);

//        // Step 3: Print Fibonacci numbers with index
//        System.out.println("\n\nDetailed Listing:");
//        PrintFibonacciWithIndex(total, first, second, 1);
    }

    /**
     * Display the title of the program
     */
    public static void displayTitle() {
        System.out.println("The 45-sequence Fibonacci :");
    }


    public static void PrintFibonacciInline(int count, int a, int b) {
        // Condition: if no more numbers to print
        if (count == 0) return;

        System.out.print(a);
        // Condition: print comma if not the last number
        if (count > 1) {
            System.out.print(", ");
        }

        // Recursive call to print the next number
        PrintFibonacciInline(count - 1, b, a + b);
    }

   
    public static void PrintFibonacciWithIndex(int count, int a, int b, int index) {
        // Condition: end recursion and display total
        if (count == 0) {
            System.out.println("Total Fibonacci numbers printed: " + (index - 1));
            return;
        }

        System.out.println(index + ": is number " + a);

        // Recursive call to print the next number
        PrintFibonacciWithIndex(count - 1, b, a + b, index + 1);
    }
}
