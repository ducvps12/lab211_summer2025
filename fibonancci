
package com.mycompany.demofibo;

public class FibonacciPrinter {

    public static void main(String[] args) {
        // Step 1: display sequence fibonacci
        displayFibosequence();

        // Step 2: find 45 sequence fibonacci by using recursion method
        int total = 45;
        int first = 0;
        int second = 1;
        PrintFiboSequence(total, first, second);

//        System.out.println("\n\nDetailed Listing:");
//        PrintFiboWithIndex(total, first, second, 1);
    }

    public static void  displayFibosequence() {
        System.out.println("The 45-sequence Fibonacci :");
    }

    public static void PrintFiboSequence(int count, int a, int b) {
    // If there are no more numbers left to print, then stop.
        if (count == 0) return;
        System.out.print(a);

// If it's not the last number, print a comma.
if (count > 1) {
            System.out.print(", ");
        }

    // Recursively call to print the next number: count-1 for remaining, b for current, a+b for next.
       PrintFiboSequence(count - 1, b, a + b);
    }

    public static void PrintFiboWithIndex(int count, int a, int b, int index) {
        // If no more numbers to print, end recursion and show total.
        if (count == 0) {
            System.out.println("Total Fibonacci numbers printed: " + (index - 1));
            return;
        }

        System.out.println(index + ": is number " + a);

        // Recursive call to print the next number: decrease count, update a/b, increment index.
       PrintFiboWithIndex(count - 1, b, a + b, index + 1);
    }
}
